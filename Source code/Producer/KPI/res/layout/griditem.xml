<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/griditem_background"
    android:orientation="vertical"
    android:padding="3dp">


    <ImageView
            android:id="@+id/imgButton"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/marketing"/>        
    
    <RelativeLayout
		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

       		<TextView
       		    android:id="@+id/lbl3"
       		    style="@style/malaPisava.bold"
       		    android:paddingTop="5dp"
       		    android:paddingLeft="10dp"
       		    android:layout_width="match_parent"
       		    android:layout_height="wrap_content"
       		    android:text="Quick Overview:"
       		    android:background="#c9c9c9"
       		    android:gravity="center_vertical" 
       		    android:paddingBottom="5dp"/>
        
        	
       		<TextView
       		    android:id="@+id/lbl1"
       		    style="@style/malaPisava.bold"
       		    android:paddingTop="15dp"
       		    android:paddingLeft="10dp"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:layout_below="@id/lbl3"
       		    android:text="@string/grid1" />
        
       		<TextView
       		    android:id="@+id/lbl2"
       		    style="@style/malaPisava.bold"
       		    android:paddingTop="5dp"
       		    android:paddingLeft="10dp"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:text="@string/grid2"
       		    android:layout_below="@id/lbl1" />
       		
       		<TextView
       		    android:id="@+id/txt1"
       		    style="@style/malaPisava"
       		    android:paddingTop="15dp"
       		    android:paddingLeft="5dp"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:text="@string/txtgrid1"
       		    android:layout_toRightOf="@id/lbl1"
       		    android:layout_below="@id/lbl3" />
        
       		<TextView
       		    android:id="@+id/txt2"
       		    style="@style/malaPisava"
       		    android:paddingTop="5dp"
       		    android:paddingLeft="5dp"
				android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:text="@string/txtgrid2"
       		    android:layout_below="@id/txt1" 
       		    android:layout_toRightOf="@id/lbl2"
       		    android:paddingBottom="40dp"/>
       		
       		
       				
    </RelativeLayout>
    
    
</LinearLayout>
