<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"     
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txthdr1"
        android:paddingLeft="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/srednjaPisava.bold"
        android:background="@drawable/listitem_header_background"
        android:text="ID"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txthdr2"
        android:paddingLeft="10dp"
        android:layout_marginLeft="-2dp"        
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/listitem_header_background"        
        style="@style/srednjaPisava.bold"
        android:layout_weight="7"
        android:text="Name" />
    
    <TextView
        android:id="@+id/txthdr3"
        android:paddingLeft="10dp"
        android:layout_marginLeft="-2dp"              
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/listitem_header_background"        
        style="@style/srednjaPisava.bold"
        android:layout_weight="3"
       android:text="Category" />
    
    <TextView
        android:id="@+id/txthdr4"
        android:paddingLeft="10dp"
        android:layout_marginLeft="-2dp"              
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/listitem_header_background"        
        style="@style/srednjaPisava.bold"
        android:layout_weight="3"
        android:text="Actual" />
    
    <TextView
        android:id="@+id/txthdr5"
        android:paddingLeft="10dp"
        android:layout_marginLeft="-2dp"              
        android:background="@drawable/listitem_header_background"  
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/srednjaPisava.bold"
        android:layout_weight="3"
        android:text="Target" />

    <TextView
        android:id="@+id/txthdr6"
        android:paddingLeft="30dp"
        android:layout_marginLeft="-2dp"              
        android:background="@drawable/listitem_header_background"          
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/srednjaPisava.bold"
        android:layout_weight="3"
        android:text="% of Target" />
    
    <TextView
        android:id="@+id/txthdr7"
        android:paddingLeft="30dp"
        android:layout_marginLeft="-2dp"              
        android:background="@drawable/listitem_header_background"          
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/srednjaPisava.bold"
        android:layout_weight="3"
        android:text="Action" />    
    
    
    
    
</LinearLayout>
