<?xml version="1.0" encoding="utf-8"?>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#e4e4e4"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="20dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp" >

                <LinearLayout
                    android:layout_width="420dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Select Color:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <Button
                            android:id="@+id/ibColor01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/color_black_blue"
                            android:minHeight="48dp"
                            android:minWidth="48dp" />

                        <Button
                            android:id="@+id/ibColor02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/ibColor01"
                            android:background="@drawable/color_black_green"
                            android:minHeight="48dp"
                            android:minWidth="48dp" />

                        <Button
                            android:id="@+id/ibColor03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/ibColor02"
                            android:background="@drawable/color_black_red"
                            android:minHeight="48dp"
                            android:minWidth="48dp" />

                        <Button
                            android:id="@+id/ibColor04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/ibColor03"
                            android:background="@drawable/color_black_white"
                            android:minHeight="48dp"
                            android:minWidth="48dp" />

                        <Button
                            android:id="@+id/ibColor05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/ibColor04"
                            android:background="@drawable/color_white_black"
                            android:minHeight="48dp"
                            android:minWidth="48dp" />

                        <Button
                            android:id="@+id/ibColor06"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/ibColor05"
                            android:background="@drawable/color_white_blue"
                            android:minHeight="48dp"
                            android:minWidth="48dp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="30dp"
                        android:text="Select Size:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <Button
                            android:id="@+id/bSizeXs"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/b_ozadje"
                            android:text="XS" />

                        <Button
                            android:id="@+id/bSizeS"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/bSizeXs"
                            android:background="@drawable/b_ozadje"
                            android:text="S" />

                        <Button
                            android:id="@+id/bSizeM"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/bSizeS"
                            android:background="@drawable/b_ozadje"
                            android:text="M" />

                        <Button
                            android:id="@+id/bSizeL"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/bSizeM"
                            android:background="@drawable/b_ozadje"
                            android:text="L" />

                        <Button
                            android:id="@+id/bSizeXL"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/bSizeL"
                            android:background="@drawable/b_ozadje"
                            android:text="XL" />

                        <Button
                            android:id="@+id/bSizeXXL"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/bSizeXL"
                            android:background="@drawable/b_ozadje"
                            android:text="XXL" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Select Amount:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <EditText
                            android:id="@+id/editText1"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLines="1"
                            android:text="1" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="30dp"
                        android:text="Further Options:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <Button
                            android:id="@+id/bEmbroidery"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grey_button"
                            android:text="Add Embroidery"
                            android:textColor="#fff" />

                        <Button
                            android:id="@+id/bProduction"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/grey_button"
                            android:text="Edit Production"
                            android:textColor="#fff" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" >

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grey_button"
                            android:text="Share"
                            android:textColor="#fff" />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/grey_button"
                            android:text="Add to Wishlist"
                            android:textColor="#fff" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/bAddToCart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="125dp"
                        android:background="@drawable/orange_button"
                        android:text="Add to Cart"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="800dp"
                    android:layout_height="wrap_content"
                    android:background="#F6F5F2"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/ivProduct"
                            android:layout_width="510dp"
                            android:layout_height="468dp"
                            android:layout_centerHorizontal="true"
                            android:clickable="true"
                            android:src="@drawable/shirt2" />

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:text="First Generation Black / Red"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#333" />

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/tvName"
                            android:layout_below="@+id/tvName"
                            android:layout_marginTop="20dp"
                            android:background="#777"
                            android:padding="10dp"
                            android:text="79,99 â‚¬"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#fff"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="141dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/accessories" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
