<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4"
    android:orientation="horizontal"
    tools:context="com.example.individual_shirt_design.MainActivity"
    tools:ignore="MergeRootFrame" >
    

        	<RelativeLayout
				android:padding="20dp"
				android:layout_width="450dp"
				android:layout_height="match_parent">
	    
	        	<ExpandableListView
	        	    android:id="@+id/expandableListView1"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="480dp"	        	           	   
	        	    android:background="#00000000"
	        	    android:dividerHeight="0dp"
	        	    android:divider="@null"
	        	    android:groupIndicator="@drawable/group_indicator">
	        	    
	        	</ExpandableListView>        	    
        	    
			    
			    <Button
                android:id="@+id/btn_add_to_cart"
                android:layout_width="match_parent"                
                android:layout_height="wrap_content"
                android:layout_below="@id/expandableListView1"
				android:layout_centerHorizontal="true"
                android:layout_marginTop="40sp"
                android:text="Add to cart"
                style="@style/srednjaPisava.bold.white"
                android:background="@drawable/orange_button" />
			    
			    <Button
                android:id="@+id/btn_share"
                android:layout_width="190dp"                
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_add_to_cart"				
				android:layout_alignLeft="@id/btn_add_to_cart"
                android:layout_marginTop="25dp"
                android:text="Share"
                style="@style/srednjaPisava.bold.white"
                android:background="@drawable/gray_button" />			    
			    
			    <Button
                android:id="@+id/btn_wishlist"
                android:layout_width="190dp"                
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_add_to_cart"
				android:layout_alignRight="@id/btn_add_to_cart"
                android:layout_marginTop="25dp"
                android:text="Add to Wishlist"
                style="@style/srednjaPisava.bold.white"
                android:background="@drawable/gray_button" />			    
			    			    
			    
	        </RelativeLayout>
        

    
    <RelativeLayout
       		android:layout_margin="20dp"
            android:layout_width="781dp"
    		android:layout_height="641dp"
        	android:background="@drawable/individ_sh_right"        	        
        >
        
        <TextView
            android:id="@+id/cena"
            style="@style/velikaPisava.white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingTop="60dp"
            android:text="0 &#8364;" />
        
	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="60dp"/>
        
    </RelativeLayout>
        
    
 

</LinearLayout>
    

