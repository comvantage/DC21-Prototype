<application
        android:allowBackup="true"
        android:icon="@drawable/logo21"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.challenge_idea_detail.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:label="eu.comvantage.IAF" >
                <action android:name="eu.comvantage.iaf.DC21_SHOP_CHALLANGES_IDEA_DETAIL" />
                <category android:name="eu.comvantage.iaf.category.WORKFLOW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>
