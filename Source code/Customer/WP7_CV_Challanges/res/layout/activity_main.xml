<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
      
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtNaziv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crowdsourcing Challenges"
			style="@style/srednjaPisava.bold"
			android:paddingBottom="15sp"/>

    </LinearLayout>   
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingLeft="8sp" >

        <TextView
            android:id="@+id/txtSort"
            style="@style/malaPisava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="6sp"
            android:paddingRight="620dp"
            android:paddingTop="6sp"
            android:text="Sort challenges according to" />

        <TextView
            android:id="@+id/txtTitle"
            style="@style/malaPisava.bold.orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:text="Title" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            style="@style/malaPisava"/>        
        
        
        <TextView
            android:id="@+id/txtDurDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            style="@style/malaPisava.bold"
			android:paddingLeft="5sp"
			android:paddingRight="5sp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            style="@style/malaPisava"/>        
                      
        <TextView
            android:id="@+id/txtIdeas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ideas"
            style="@style/malaPisava.bold.orange"
			android:paddingLeft="5sp"
			android:paddingRight="5sp" />        
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            style="@style/malaPisava"/>        
        
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            style="@style/malaPisava.bold.orange"
			android:paddingLeft="5sp"
			android:paddingRight="5sp" />        	       	        
        
    </LinearLayout>

    <ListView
        android:id="@+id/lstContest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:paddingTop="8sp"
		android:layout_marginTop="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="6.0sp" >
        
    </ListView>
			

</LinearLayout>
