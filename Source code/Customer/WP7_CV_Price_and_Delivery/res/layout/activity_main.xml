<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:orientation="vertical" >
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="380dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Post Code / Address"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Enter Post Code or Address"
                android:inputType="textPostalAddress" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Distance to Producer"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:text="20 km"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
				<SeekBar
                    android:id="@+id/sbDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="1980"
                    android:progress="300" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:text="2000 km"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
			<TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="300 km"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Price"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:text="50 €"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
				<SeekBar
                    android:id="@+id/sbPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="200"
                    android:progress="99" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:text="250 €"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
			<TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="99 €"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Shipping time"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:text="2 Days"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

				<SeekBar
				    android:id="@+id/sbTime"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_weight="1"
				    android:max="28"
				    android:progress="2" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:text="30 Days"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

			<TextView
			    android:id="@+id/tvTime"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    android:text="2 Days"
			    android:textAppearance="?android:attr/textAppearanceMedium"
			    android:textStyle="bold" />

			<Button
			    android:id="@+id/bAddToCart"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    android:layout_marginTop="150dp"
			    android:background="@drawable/orange_button"
			    android:minWidth="200dp"
			    android:text="Add to Cart"
			    android:textColor="#fff"
			    android:textStyle="bold" />

        </LinearLayout>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_marginLeft="15dp"
		    android:background="#F6F5F2"
		    android:orientation="vertical"
		    android:paddingBottom="15dp"
		    android:paddingLeft="15dp"
		    android:paddingRight="15dp"
		    android:paddingTop="15dp" >

			<RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content" >

			    <TextView
			        android:id="@+id/textView1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_alignParentTop="true"
			        android:text="First Generation Black / Red"
			        android:textAppearance="?android:attr/textAppearanceLarge"
			        android:textColor="#333" />

			    <TextView
			        android:id="@+id/textView8"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_below="@+id/textView1"
			        android:layout_marginTop="10dp"
			        android:background="#777"
			        android:padding="10dp"
			        android:text="99,99 €"
			        android:textAppearance="?android:attr/textAppearanceLarge"
			        android:textColor="#fff"
			        android:textStyle="bold" />

			    <ImageView
			        android:id="@+id/imageView1"
			        android:layout_width="100dp"
			        android:layout_height="100dp"
			        android:layout_alignParentRight="true"
			        android:layout_alignParentTop="true"
			        android:layout_centerVertical="true"
			        android:src="@drawable/shirt2" />

			</RelativeLayout>

		<ImageView
		    android:id="@+id/ivMap"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_marginTop="10dp"
		    android:scaleType="fitXY"
		    android:src="@drawable/map_expensive_close" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>